<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<!-- bean definitions go here -->
	<!-- Definition for student bean -->
	<bean id="student" class="com.szl.demo.spring.springdemo.Student">
		<property name="name" value="Zara" />
	</bean>
	<bean id="student1" class="com.szl.demo.spring.springdemo.Student">
		<property name="name" value="Tom" />
	</bean>
	<!-- Definition for textEditor bean without constructor-arg -->
	<bean id="textEditor" class="com.szl.demo.spring.springdemo.TextEditor">
	</bean>

	<!-- Definition for spellChecker bean -->
	<bean id="spellChecker" class="com.szl.demo.spring.springdemo.SpellChecker">
	</bean>
	<bean id="sayHi" class="com.szl.demo.spring.springdemo.SayHi"></bean>
	<bean id="profile" class="com.szl.demo.spring.springdemo.Profile"></bean>
</beans>